<!-- JS for Active Sidebar based on URL -->
<script>
    const sidebarLinks = document.querySelectorAll('#sidebar .sidebar-link');
    const currentPath = window.location.pathname.split('/').pop(); // gets last part of URL

    sidebarLinks.forEach(link => {
        const page = link.dataset.page;

        // Check if the current path matches the link
        if(currentPath === page) {
            link.classList.add('active', 'bg-[#c69858]', 'text-white');
        } else {
            link.classList.remove('active', 'bg-[#c69858]', 'text-white');
        }
    });
</script>

<style>
    /* Optional: hover style for inactive links */
    .sidebar-link:not(.active):hover {
        background-color: #c69858;
        color: white;
