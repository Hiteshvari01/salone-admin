<div class="p-6">
    <div class="max-w-4xl mx-auto bg-[#f8f2eb] p-6 rounded shadow border-l-4 border-[#c69858]">
        <h1 class="text-2xl font-bold mb-4 text-[#c69858]">Add New Service</h1>
        <form action="/admin/services/add" method="POST" enctype="multipart/form-data" class="space-y-4 needs-validation" novalidate>

            <!-- Service Name -->
            <div>
                <label class="block mb-1 text-[#5a4630] font-semibold">Service Name</label>
                <input type="text" name="name" class="w-full border border-[#c69858] p-2 rounded" required />
                <div class="invalid-feedback">Please enter the service name.</div>
            </div>

            <!-- Description -->
            <div>
                <label class="block mb-1 text-[#5a4630] font-semibold">Description</label>
                <textarea name="description" rows="3" class="w-full border border-[#c69858] p-2 rounded" required></textarea>
                <div class="invalid-feedback">Please enter the description.</div>
            </div>

            <!-- Price -->
            <div>
                <label class="block mb-1 text-[#5a4630] font-semibold">Price (â‚¹)</label>
                <input type="number" name="price" class="w-full border border-[#c69858] p-2 rounded" required />
                <div class="invalid-feedback">Please enter the price.</div>
            </div>

            <!-- Duration -->
            <div>
                <label class="block mb-1 text-[#5a4630] font-semibold">Duration</label>
                <input type="text" name="duration" placeholder="Default: 30 min" class="w-full border border-[#c69858] p-2 rounded" />
            </div>

            <!-- Image Upload -->
            <div>
                <label class="block mb-1 text-[#5a4630] font-semibold">Service Image</label>
                <input type="file" name="image" accept="image/*" class="w-full border border-[#c69858] p-2 rounded" required />
                <div class="invalid-feedback">Please upload a service image.</div>
            </div>

            <button type="submit" class="bg-[#c69858] text-white px-4 py-2 rounded hover:bg-[#a97d4b]">Add Service</button>
        </form>
    </div>
</div>
