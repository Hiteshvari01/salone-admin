<div class="container mt-4">
   <div class="d-flex justify-content-between align-items-center mb-4 p-3 rounded" style="background-color:#c69858; color:white;">
    <h2 class="mb-0">Add New Image</h2>
  </div>
    <form action="/admin/gallery" method="POST" enctype="multipart/form-data" 
          class="p-4 rounded shadow-sm" style="background-color:#f8f2eb; border-left:5px solid #c69858;">

        <div class="mb-3">
            <label for="title" class="form-label fw-semibold" style="color:#5a4630;">Title</label>
            <input type="text" name="title" id="title" class="form-control form-control-lg" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label fw-semibold" style="color:#5a4630;">Description</label>
            <textarea name="description" id="description" class="form-control form-control-lg" rows="3" required></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label fw-semibold" style="color:#5a4630;">Upload Image</label>
            <input type="file" name="image" id="image" class="form-control" accept="image/*" required>
        </div>

        <div class="d-flex justify-content-end">
            <a href="/admin/gallery" class="btn btn-outline-secondary me-2">Cancel</a>
            <button class="btn" style="background-color:#c69858; color:white;">Add Image</button>
        </div>

    </form>
</div>
