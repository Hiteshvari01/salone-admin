<div class="container mt-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4 p-3 rounded" style="background-color:#c69858; color:white;">
    <h2 class="mb-0">Edit Image</h2>
    <span class="fw-semibold">Image Info</span>
  </div>

  <!-- Form -->
  <form action="/admin/gallery/<%= image._id %>?_method=PUT" method="POST" enctype="multipart/form-data" 
        class="p-4 rounded shadow-sm" style="background-color:#f8f2eb; border-left: 5px solid #c69858;">

    <!-- Title -->
    <div class="mb-3">
      <label for="title" class="form-label fw-semibold">Title</label>
      <input type="text" name="title" id="title" class="form-control form-control-lg" value="<%= image.title %>" required>
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label for="description" class="form-label fw-semibold">Description</label>
      <textarea name="description" id="description" class="form-control form-control-lg" rows="4" required><%= image.description %></textarea>
    </div>

    <!-- Replace Image -->
    <div class="mb-3">
      <label for="image" class="form-label fw-semibold">Replace Image (optional)</label>
      <input type="file" name="image" id="image" class="form-control" accept="image/*">
    </div>

    <!-- Current Image URL -->
    <div class="mb-3">
      <label for="imageUrl" class="form-label fw-semibold">Current Image URL</label>
      <input type="text" id="imageUrl" class="form-control" 
             value="<%= image.imageUrl && image.imageUrl.url ? image.imageUrl.url : '' %>" readonly>
    </div>

    <!-- Current Image Preview -->
    <div class="mb-4 text-center">
      <img src="<%= image.imageUrl && image.imageUrl.url ? image.imageUrl.url : '/images/placeholder.png' %>" 
           alt="<%= image.title %>" 
           class="img-thumbnail rounded" 
           style="height:180px; object-fit:cover; border:2px solid #c69858;">
    </div>

    <!-- Buttons -->
    <div class="d-flex justify-content-end">
      <a href="/admin/gallery" class="btn btn-outline-secondary me-2">Cancel</a>
      <button type="submit" class="btn" style="background-color:#c69858; color:white;">Update Image</button>
    </div>

  </form>
</div>
